@{
    ViewData["Title"] = "Index";
    var guests = ViewBag.guests;
}

<h1>Index</h1>

<div class="container">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Birthdata</th>
                <th>DateOfAppintment</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var guest in guests)
            {
                <tr>
                    <td>@guest.Id</td>
                    <td>@guest.Name</td>
                    <td>@guest.Email</td>
                    <td>@guest.Phone</td>
                    <td>@guest.Address</td>
                    <td>@guest.Birthdate.ToString("dd/MM/yyyy")</td>
                    <td>@guest.DateOfAppintment</td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@guest.Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Add" class="btn btn-primary">Create</a>